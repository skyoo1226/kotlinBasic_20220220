<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

   <Button
       android:id="@+id/btnLog"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="로그 찍어보기" />

   <Button
       android:id="@+id/btnToast"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="토스트 띄우기" />

   <Button
       android:id="@+id/btnVariablePractice"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="변수 문법 연습" />

   <Button
       android:id="@+id/btnConditionPractice"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="조건문 연습" />

   <Button
       android:id="@+id/btnConditionPractice2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="조건문 연습2" />


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="출생 년도" />

   <EditText
       android:id="@+id/edtBirthYear"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="태어난 년도 입력 (ex. 1988)"
       android:inputType="number" />

   <Button
       android:id="@+id/btnCalculateAge"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="나이 판정하기"/>


</LinearLayout>